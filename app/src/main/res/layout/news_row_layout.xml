<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212121"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        android:padding="16dp">

        <com.developerxy.wildlegion.customviews.FontEnabledTextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="New academy"
            android:textColor="@color/primaryDarkColor"
            android:textSize="24sp"
            app:customFont="roboto"
            app:customStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.developerxy.wildlegion.customviews.FontEnabledTextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="04.09.2018"
            android:textColor="@color/primaryDarkColor"
            android:textSize="14sp"
            app:customFont="roboto"
            app:customStyle="light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <com.developerxy.wildlegion.customviews.FontEnabledTextView
            android:id="@+id/tvStoryNews"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="{A.R} (GR 8379115) is now an official medium ranked member. Great improvement ! Good luck for the future !"
            android:textColor="@color/field_text_color"
            android:textSize="18sp"
            app:customFont="roboto"
            app:customStyle="regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate" />

        <com.developerxy.wildlegion.customviews.FontEnabledTextView
            android:id="@+id/tvPostedBy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:text="- MysticaL"
            android:textColor="@color/secondaryColor"
            android:textSize="18sp"
            app:customFont="roboto"
            app:customStyle="regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStoryNews" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>